<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <corners android:radius="3dp" />
            <gradient android:startColor="@color/buttonColor" android:centerColor="@color/buttonColor" android:endColor="@color/buttonColor" android:angle="90" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#910000" />
            <corners android:radius="3dp" />
            <gradient android:startColor="@color/buttonPressedColor" android:centerColor="@color/buttonPressedColor" android:endColor="@color/buttonPressedColor" android:angle="90" />
        </shape>
    </item>
</selector>