<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="2dp" />
            <gradient android:startColor="@color/primaryColorDark" android:centerColor="@color/primaryColorDark" android:endColor="@color/primaryColorDark" android:angle="90" />
        </shape>
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="1dp" />
            <gradient android:startColor="#dddddd" android:centerColor="#eeeeee" android:endColor="@color/buttonColor" android:angle="90" />
        </shape>
    </item>





</selector>